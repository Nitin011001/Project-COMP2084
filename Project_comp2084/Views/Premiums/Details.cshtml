@model Project_comp2084.Controllers.PremiumViewModel


@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div >
    <h4>Premium</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    @if (Model.package.Any())
    {
      <table>
          <thead>
              <tr>
                  <th>
                      PackageName
                  </th>
                  <th>
                      Price
                  </th>
                  <th>
                      Description
                  </th>
              </tr>
          </thead>
          <tbody>
                @foreach(var pack in Model.package)
                {
                    <tr>
                        <td style=" width: 100%;
  padding: 12px 20px;
  margin: 8px 0;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;" >
                            @Html.DisplayFor(modelItem=>pack.PackageName)
                        </td>
                        <td style=" width: 100%;
  padding: 12px 20px;
  margin: 8px 0;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;" >
                            @Html.DisplayFor(modelItem=>pack.Price)
                        </td>
                        <td style=" width: 100%;
  padding: 12px 20px;
  margin: 8px 0;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;" >
                            @Html.DisplayFor(modelItem=>pack.Description)
                        </td>
                        <td  style=" background-color: #4CAF50;
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  
  border-radius:9px;
  font-size: 16px;
  margin: 4px 2px;
  cursor: pointer;">
                            @Html.ActionLink("Edit","Edit","Packages",new{id=pack.Id})
                        </td>
                        <td style=" background-color: blue;
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
 
  border-radius:9px;
  font-size: 16px;
  margin: 4px 2px;
  cursor: pointer;">
                            @Html.ActionLink("Details","Details","Packages",new{id=pack.Id})
                        </td>
                        <td  style=" background-color: coral;
 border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  
  border-radius:9px;
  font-size: 16px;
  margin: 4px 2px;
  cursor: pointer;">
                            @Html.ActionLink("Delete","Delete","Packages",new{id=pack.Id})
                        </td>
                    </tr>
                }
            </tbody>
      </table>  
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" style=" width: 100%;
  background-color: #4CAF50;
  color: white;
  padding: 14px 20px;
  margin: 8px 0;
  border: none;
  border-radius: 4px;
  cursor: pointer;">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
