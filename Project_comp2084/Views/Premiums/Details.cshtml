@model Project_comp2084.Controllers.PremiumViewModel


@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Premium</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    @if (Model.package.Any())
    {
      <table>
          <thead>
              <tr>
                  <th>
                      PackageName
                  </th>
                  <th>
                      Price
                  </th>
                  <th>
                      Description
                  </th>
              </tr>
          </thead>
          <tbody>
                @foreach(var pack in Model.package)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem=>pack.PackageName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem=>pack.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem=>pack.Description)
                        </td>
                        <td>
                            @Html.ActionLink("Edit","Edit","Packages",new{id=pack.Id})
                        </td>
                        <td>
                            @Html.ActionLink("Details","Details","Packages",new{id=pack.Id})
                        </td>
                        <td>
                            @Html.ActionLink("Delete","Delete","Packages",new{id=pack.Id})
                        </td>
                    </tr>
                }
            </tbody>
      </table>  
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
